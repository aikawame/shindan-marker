{
  "name": "診断マーカー",
  "description" : "Twitterの診断系トレンドにマークを付けます。",
  "version": "0.1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/home",
        "*://twitter.com/i/trends",
        "*://tweetdeck.twitter.com/*"
      ],
      "css": ["content.css"],
      "js": ["inject.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "*"
  ]
}
